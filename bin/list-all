#!/usr/bin/env bash

# Fetch all tag names, and get only second column. Then remove all unnecessary characters.
list_of_versions=$(
  curl -s https://api.github.com/repos/kitware/cmake/tags   \
  | grep -oE "name\": \".{1,15}\","                         \
  | awk 'gsub("(name\": \")|(\",)|(v)", "")'                \
  | awk '{arr[i++]=$0} END {while (i>0) print arr[--i] }'
)
echo $list_of_versions
